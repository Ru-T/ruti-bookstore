<%= form_tag charges_path, method: :post do %>
  <article>
    <%= hidden_field_tag :pending_purchase_id, purchase.id %>
    <label class="amount">
      <td>Price (in cents): <%= purchase.price_at_purchase * purchase.quantity %></td>
    </label>
  </article>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Your Books"
          data-billing-address=true
          data-shipping-address=true
          data-amount=<%= purchase.price_at_purchase %>
          data-label="Purchase"
          data-panel-label="Submit Order"
          data-locale="auto">
  </script>
<% end %>
