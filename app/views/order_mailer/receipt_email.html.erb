<h3>Thanks for completing your order <%= @user.email %></h3>

<p>Total Cost: <%= @order.total %></p>

<% @order.line_items.each do |line_item| %>
  <p>Book Title: <%= line_item.book.title %></p>
  <p>Author: <%= line_item.book.author %></p>
  <p>Published On: <%= line_item.book.published_date %></p>
  <p>Price: <%= line_item.book.price %></p>
  <p>Quantity: <%= line_item.quantity %></p>
  <p>Book Price: <%= line_item.total_price %></p>
<% end %>
