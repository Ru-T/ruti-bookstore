<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript">
  // This identifies your website in the createToken call below
  Stripe.setPublishableKey(publishable_key);
  // ...
</script>

<div class="container">
  <h1>New Order</h1>
  <%= form_for(@order) do |f| %>
    <div class="form-group">
      <%= label_tag :card_number, "Credit Card Number" %>
      <%= text_field_tag :card_number, nil, name: nil %>
    </div>
    <div class="form-group">
      <%= label_tag :card_code, "CVV" %>
      <%= text_field_tag :card_code, nil, name: nil %>
    </div>
    <div class="form-group">
      <%= label_tag :card_month, "Credit Card Expiration" %>
      <%= select_month nil, { add_month_numbers: true }, { name: nil, id: "card-month" } %>
      <%= select_year nil, { start_year: Date.today.year, end_year: Date.today.year + 15 } %>
    </div>
    <div class="actions">
      <%= f.submit "Create Order" %>
    </div>
  <% end %>
</div>
