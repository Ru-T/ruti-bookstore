<div class="container">
  <h1> Order Confirmation </h1>
  <% @order.line_items.each do |line_item| %>
    <p> Title: <%= line_item.book.title %> </p>
    <p> Author: <%= line_item.book.author %> </p>
    <p> Published On: <%= line_item.book.published_date %> </p>
    <p> Price: <%= humanized_money_with_symbol line_item.book.price %> </p>
    <p> Quantity: <%= line_item.quantity %> </p>
    <p> Total Price: <%= humanized_money_with_symbol line_item.total_price %> </p>
  <% end %>
  <h3> Total: <%= humanized_money_with_symbol @order.total %> </h3>
