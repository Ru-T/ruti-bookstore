<h1>Books</h1>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th><%= sort_link "title" %></th>
      <th><%= sort_link "published_date" %></th>
      <th><%= sort_link "author" %></th>
      <th><%= sort_link "price" %></th>
      <th><%= sort_link "category" %></th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td> <%= book.title %> </td>
        <td> <%= book.published_date %> </td>
        <td> <%= book.author %> </td>
        <td> <%= book.price %> </td>
        <td> <%= book.category %> </td>
        <td> <%= book.description %> </td>
        <td><%= link_to 'View Book', book %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @books, renderer: BootstrapPagination::Rails %>
