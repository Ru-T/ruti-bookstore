<div class="container">
  <h1>Books</h1>

  <%= render 'search_form' %>
  <p>Sort By: <%= link_to "Most Popular", sort: "most_popular" %></p>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th><%= sort_link(@q, :title) %></th>
        <th><%= sort_link(@q, :published_date) %></th>
        <th><%= sort_link(@q, :author) %></th>
        <th><%= sort_link(@q, :price) %></th>
        <th><%= sort_link(@q, :category) %></th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td> <%= book.title %> </td>
          <td> <%= book.published_date %> </td>
          <td> <%= book.author %> </td>
          <td> <%= book.price.format %> </td>
          <td> <%= book.category %> </td>
          <td> <%= book.description %> </td>
          <td> <%= book.order_count %> </td>
          <td><%= link_to 'View Book', book, id: "view_book" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @books %>
</div>
