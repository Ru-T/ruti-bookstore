<h1> Books </h1>

<% @books.each do |book| %>
  <p> <%= book.title %> </p>
  <p> <%= book.published_date %> </p>
  <p> <%= book.author %> </p>
  <p> <%= book.price %> </p>
  <p> <%= book.category %> </p>
  <p> <%= book.description %> </p>
  <% if current_user.pending_purchases.include?(book) %>
    <p> Already added to cart </p>
  <% else %>
    <%= form_for(current_user.pending_purchases.build) do |f| %>
      <%= hidden_field_tag :book_id, book.id %>
      <%= f.submit "Add to cart" %>
    <% end %>
  <% end %>
<% end %>
