<h1>Books</h1>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Published Date</th>
      <th>Author</th>
      <th>Price</th>
      <th>Category</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td> <%= book.title %> </td>
        <td> <%= book.published_date %> </td>
        <td> <%= book.author %> </td>
        <td> <%= book.price %> </td>
        <td> <%= book.category %> </td>
        <td> <%= book.description %> </td>
        <td><%= link_to 'View Book', book %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @books, renderer: BootstrapPagination::Rails %>
