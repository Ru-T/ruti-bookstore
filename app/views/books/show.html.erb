<div class="container">
  <h1>Book</h1>
  <p> <%= @book.title %> </p>
  <p> <%= @book.published_date %> </p>
  <p> <%= @book.author %> </p>
  <p> <%= @book.price %> </p>
  <p> <%= @book.category %> </p>
  <p> <%= @book.description %> </p>

  <% if current_user.in_cart?(@book) %>
    <td> Already added to cart </td>
  <% else %>
    <%= form_for(current_user.line_items.build) do |f| %>
      <%= hidden_field_tag :book_id, @book.id %>
      <td><%= f.submit "Add to cart", id: "add_to_cart" %></td>
    <% end %>
  <% end %>
</div>
